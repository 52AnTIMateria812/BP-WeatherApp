<Window x:Class="Bp_project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bp_project"
        mc:Ignorable="d"
        Title="Погода в Санкт-Петербурге"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Window.Resources>
        <Storyboard x:Key="WeatherFadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.7"/>
        </Storyboard>
        <Storyboard x:Key="FadeIn1">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.7" BeginTime="0:0:0.1"/>
        </Storyboard>
        <Storyboard x:Key="FadeIn2">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.7" BeginTime="0:0:0.5"/>
        </Storyboard>
        <Storyboard x:Key="FadeIn3">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.7" BeginTime="0:0:0.9"/>
        </Storyboard>
        <Storyboard x:Key="FadeIn4">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.7" BeginTime="0:0:1.3"/>
        </Storyboard>
        <Storyboard x:Key="FadeIn5">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.7" BeginTime="0:0:1.7"/>
        </Storyboard>
        <Storyboard x:Key="FadeInCity">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.7" BeginTime="0:0:0.1"/>
        </Storyboard>
        <Storyboard x:Key="FadeInIcon">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.7" BeginTime="0:0:0.5"/>
        </Storyboard>
        <Storyboard x:Key="WindowFadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1.2"/>
        </Storyboard>
        <!-- Современный стиль кнопок -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4FC3F7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#0288D1"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#0288D1" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="18">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0288D1"/>
                                <Setter Property="Foreground" Value="#FFFDE7"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#01579B"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <EventTrigger RoutedEvent="Button.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)" To="1.08" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)" To="1.08" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="Button.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DropShadowEffect x:Key="DropShadowEffect" Color="#B0BEC5" BlurRadius="18" ShadowDepth="4"/>
    </Window.Resources>
    <Grid x:Name="RootGrid" Background="#BEEFFF" Margin="0" Opacity="0">
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard Storyboard="{StaticResource WindowFadeIn}"/>
            </EventTrigger>
        </Grid.Triggers>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0,60,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Санкт-Петербург" FontSize="60" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" FontFamily="Calibri" Opacity="0">
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="TextBlock.Loaded">
                        <BeginStoryboard Storyboard="{StaticResource FadeInCity}"/>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>
            <Image Grid.Row="1" Width="96" Height="96" Margin="0,20,0,0" Source="{Binding Weather.Icon}" HorizontalAlignment="Center" Opacity="0">
                <Image.Triggers>
                    <EventTrigger RoutedEvent="Image.Loaded">
                        <BeginStoryboard Storyboard="{StaticResource FadeInIcon}"/>
                    </EventTrigger>
                </Image.Triggers>
            </Image>
        </Grid>
        <StackPanel x:Name="WeatherPanel" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="1" Width="700">
            <TextBlock x:Name="TempText" Text="{Binding Weather.Temperature, StringFormat='Температура: {0}°C'}" FontSize="48" FontWeight="SemiBold" Margin="0,30,0,0" HorizontalAlignment="Center" TextAlignment="Center" FontFamily="Calibri" Opacity="0">
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="TextBlock.Loaded">
                        <BeginStoryboard Storyboard="{StaticResource FadeIn1}"/>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>
            <TextBlock x:Name="FeelsLikeText" Text="{Binding Weather.FeelsLike, StringFormat='Ощущается как: {0}°C'}" FontSize="36" HorizontalAlignment="Center" TextAlignment="Center" FontFamily="Calibri" Opacity="0">
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="TextBlock.Loaded">
                        <BeginStoryboard Storyboard="{StaticResource FadeIn2}"/>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>
            <TextBlock x:Name="HumidityText" Text="{Binding Weather.Humidity, StringFormat='Влажность: {0}%'}" FontSize="36" HorizontalAlignment="Center" TextAlignment="Center" FontFamily="Calibri" Opacity="0">
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="TextBlock.Loaded">
                        <BeginStoryboard Storyboard="{StaticResource FadeIn3}"/>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>
            <TextBlock x:Name="WindText" Text="{Binding Weather.WindSpeed, StringFormat='Ветер: {0} м/с'}" FontSize="36" HorizontalAlignment="Center" TextAlignment="Center" FontFamily="Calibri" Opacity="0">
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="TextBlock.Loaded">
                        <BeginStoryboard Storyboard="{StaticResource FadeIn4}"/>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>
            <TextBlock x:Name="DateText" Text="{Binding Weather.DateTime, StringFormat='Обновлено: {0:HH:mm:ss}'}" FontSize="28" Foreground="Gray" Margin="0,30,0,0" HorizontalAlignment="Center" TextAlignment="Center" FontFamily="Calibri" Opacity="0">
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="TextBlock.Loaded">
                        <BeginStoryboard Storyboard="{StaticResource FadeIn5}"/>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,40,0,40">
            <Button Content="Обновить" Width="200" Height="60" Margin="0,0,20,0" FontSize="24" Click="RefreshButton_Click" Style="{StaticResource ModernButtonStyle}"/>
            <Button Content="Настройки" Width="200" Height="60" Margin="0,0,20,0" FontSize="24" Click="SettingsButton_Click" Style="{StaticResource ModernButtonStyle}"/>
            <Button Content="История" Width="200" Height="60" FontSize="24" Click="HistoryButton_Click" Style="{StaticResource ModernButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
