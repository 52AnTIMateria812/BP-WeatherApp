<Window x:Class="Bp_project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bp_project"
        mc:Ignorable="d"
        Title="Погода в Санкт-Петербурге" Height="400" Width="350">
    <Window.Resources>
        <Storyboard x:Key="WeatherFadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.7"/>
        </Storyboard>
        <!-- Анимация движения облака -->
        <Storyboard x:Key="CloudMoveStoryboard" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Cloud1" Storyboard.TargetProperty="(Canvas.Left)" From="-100" To="400" Duration="0:0:18"/>
            <DoubleAnimation Storyboard.TargetName="Cloud2" Storyboard.TargetProperty="(Canvas.Left)" From="-120" To="370" Duration="0:0:25"/>
        </Storyboard>
    </Window.Resources>
    <Grid Background="#BEEFFF" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Сначала Canvas с облаками -->
        <Canvas IsHitTestVisible="False" Panel.ZIndex="-1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Canvas.Triggers>
                <EventTrigger RoutedEvent="Canvas.Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation Storyboard.TargetName="CloudImg1" Storyboard.TargetProperty="(Canvas.Left)" From="-200" To="400" Duration="0:0:22"/>
                            <DoubleAnimation Storyboard.TargetName="CloudImg2" Storyboard.TargetProperty="(Canvas.Left)" From="-250" To="350" Duration="0:0:30"/>
                            <DoubleAnimation Storyboard.TargetName="CloudImg3" Storyboard.TargetProperty="(Canvas.Left)" From="-180" To="370" Duration="0:0:18"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Canvas.Triggers>
            <Image x:Name="CloudImg1" Source="pack://application:,,,/Bp_project;component/Resources/cloud_PNG10.png" Width="180" Height="100" Canvas.Left="-200" Canvas.Top="40" Opacity="0.8" Stretch="Uniform"/>
            <Image x:Name="CloudImg2" Source="pack://application:,,,/Bp_project;component/Resources/cloud_PNG8.png" Width="220" Height="120" Canvas.Left="-250" Canvas.Top="120" Opacity="0.7" Stretch="Uniform"/>
            <Image x:Name="CloudImg3" Source="pack://application:,,,/Bp_project;component/Resources/cloud_PNG22.png" Width="150" Height="90" Canvas.Left="-180" Canvas.Top="200" Opacity="0.85" Stretch="Uniform"/>
        </Canvas>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <TextBlock Text="Санкт-Петербург" FontSize="22" FontWeight="Bold"/>
            <Image Width="48" Height="48" Margin="10,0,0,0" Source="{Binding Weather.Icon}"/>
        </StackPanel>
        <StackPanel x:Name="WeatherPanel" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0">
            <StackPanel.Triggers>
                <EventTrigger RoutedEvent="StackPanel.Loaded">
                    <BeginStoryboard Storyboard="{StaticResource WeatherFadeIn}"/>
                </EventTrigger>
            </StackPanel.Triggers>
            <TextBlock Text="{Binding Weather.Description}" FontSize="16" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding Weather.Temperature, StringFormat='Температура: {0}°C'}" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding Weather.FeelsLike, StringFormat='Ощущается как: {0}°C'}" FontSize="14"/>
            <TextBlock Text="{Binding Weather.Humidity, StringFormat='Влажность: {0}%'}" FontSize="14"/>
            <TextBlock Text="{Binding Weather.WindSpeed, StringFormat='Ветер: {0} м/с'}" FontSize="14"/>
            <TextBlock Text="{Binding Weather.DateTime, StringFormat='Обновлено: {0:HH:mm:ss}'}" FontSize="12" Foreground="Gray" Margin="0,10,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Обновить" Width="100" Height="30" Margin="0,0,10,0" Click="RefreshButton_Click"/>
            <Button Content="Настройки" Width="100" Height="30" Margin="0,0,10,0" Click="SettingsButton_Click"/>
            <Button Content="История" Width="100" Height="30" Click="HistoryButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
